  gem 'spork', '0.8.5'
  gem 'launchy', '2.0.5'
  gem 'rspec-rails', '>= 2.6.1'
  gem 'webrat', '0.7.3'
  gem 'heroku'

end

group :test do
  # Pretty printed test output
  gem 'turn', :require => false
end
