<!DOCTYPE html>
<html>
  <head>
    <title>Dionisio</title>
    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="content">
      <div class="header">
        <h1>Rio Curtição</h1>
        <%=  gravatar_image_tag(current_user.email, :alt => current_user.nome, :gravatar => {:size =>100}) if user_signed_in? %>
        <span  class="notice">
          <%= notice if notice %> </span>
        <span  class="alert">
          <%=  alert if alert %> </span>
        <% if !user_signed_in?  %>
          <%= link_to t("devise.sign_up"),new_user_registration_path  %>
          <%= link_to t("devise.sign_in"), new_user_session_path  %>
        <%else%>
          <%= link_to t("devise.sign_out"),logout_path  %>
        <%end%>
      </div>
      <div class="main">
        <%= yield %>
      </div>
      <div class="footer">
        2011
      </div>
    </div>


  </body>
</html>
